# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Java files
[*.java]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# XML files
[*.xml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Properties files
[*.properties]
indent_style = space
indent_size = 2
